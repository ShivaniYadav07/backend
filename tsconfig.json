{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "types": [
            "node",
            "express",
            "express-serve-static-core"
        ],
        "typeRoots": [
            "./src/types",
            "./node_modules/@types"
        ],
    },
    "include": [
        "src/**/*",
        "src/types/**/*.d.ts"
    ]
}